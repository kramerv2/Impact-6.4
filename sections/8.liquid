<script>
  // load the swiper css and js only once:
    (function () {
      function loadSwiperOnBannerSlider3() {
          if (typeof Swiper === 'undefined') {
              setTimeout(loadSwiperOnBannerSlider3, 100);
              return;
          }
          try {
              const swiper = new Swiper('.swiper-{{ section.id }}', {
                  slidesPerView: 1,
                  loop: true,
                  autoplay: {
                      delay: {{ duration | times: 1000 | round: 0 }},
                      disableOnInteraction: false,
                  },
              });
  
              function updateTabButtonBottomOverlayWidth() {
                  const activeIndex = swiper.realIndex;
                  const tabs = document.querySelectorAll('.tab-button-{{ section.id }}');
                  tabs.forEach((tab, index) => {
                      const tabButtonBottomOverlay = tab.querySelector('.tab-button-bottom-overlay-{{ section.id }}');
                      if (index === activeIndex) {
                          tabButtonBottomOverlay.style.transition = 'width ' + {{ duration }} + 's linear';
                          tabButtonBottomOverlay.style.width = '100%';
                      } else {
                          tabButtonBottomOverlay.style.transition = 'none';
                          tabButtonBottomOverlay.style.width = '0%';
                      }
                  });
              }
  
              // ÐÑÐ·Ð¾Ð² ÑÑÐ½ÐºÑÐ¸Ð¸ Ð´Ð»Ñ ÑÑÑÐ°Ð½Ð¾Ð²ÐºÐ¸ Ð°Ð½Ð¸Ð¼Ð°ÑÐ¸Ð¸ Ð½Ð° Ð¿ÐµÑÐ²ÑÑ Ð²ÐºÐ»Ð°Ð´ÐºÑ
              updateTabButtonBottomOverlayWidth();
  
              swiper.on('slideChange', updateTabButtonBottomOverlayWidth);
  
              const tabs = document.querySelectorAll('.tab-button-{{ section.id }}');
              tabs.forEach((tab, index) => {
                  tab.addEventListener('click', () => {
                      swiper.slideToLoop(index);
                  });
              });
  
              document.addEventListener('shopify:section:unload', function (event) {
                  if (event.detail.sectionId === '{{ section.id }}') {
                      swiper.destroy();
                  }
              });
          } catch (e) {
              console.warn('Banner 3 error:');
              console.warn(e);
          }
      }
  
      loadSwiperOnBannerSlider3();
  
      if (window.Shopify && Shopify.designMode) {
          document.addEventListener('shopify:section:load', loadSwiperOnBannerSlider3);
      }
  })();
</script>
{% schema %}
{
  "name": "Slideshow 3",
  "settings": [
    {
      "type": "text",
      "id": "height",
      "label": "Section height in px",
      "info": "If not set, the height will be calculated automatically based on the content"
    },
    {
      "type": "text",
      "id": "mobile_height",
      "label": "Section height (mobile) in px"
    },
    {
      "type": "text",
      "id": "autoplay_duration",
      "label": "Autoplay duration in seconds",
      "default": "5",
      "info": "Global autoplay duration in seconds."
    },
    {
      "type": "range",
      "id": "overlay",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Overlay",
      "default": 50,
      "info": "Will be applied to all slides. You can override this value for each slide."
    },
    {
      "type": "header",
      "content": "Heading Settings"
    },
    {
      "type": "checkbox",
      "id": "heading_custom",
      "label": "Use Custom Font",
      "default": false
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Heading Font Family",
      "default": "josefin_sans_n4"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 0,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Heading Size",
      "default": 40
    },
    {
