{%- style -%}

  {{ heading_font | font_face: font_display: 'swap' }}
  {{ text_font | font_face: font_display: 'swap' }}
  {{ button_font | font_face: font_display: 'swap' }}
  {{ second_button_font | font_face: font_display: 'swap' }}
  {{ tab_text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }
  
  .swiper-{{ section.id }} {
    --swiper-pagination-bullet-inactive-color: #D9D9D9;
    --swiper-pagination-bullet-inactive-opacity: 1;
    --swiper-pagination-bullet-horizontal-gap: 0;
    --swiper-pagination-bottom: 40px;
    font-family: var(--font-family);
    height: var(--mobile-height);
  }
  
  .swiper-{{ section.id }} .swiper-slide {
    position: relative;
    height: auto;
  }
  
  .swiper-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  div.swiper-button-next-{{ section.id }},
  div.swiper-button-prev-{{ section.id }} {
    display: block;
  }
  
  main div.swiper-pagination-{{ section.id }} {
    width: fit-content !important;
    border-radius: 16px;
    left: 50% !important;
    transform: translateX(-50%);
    background: var(--swiper-pagination-bg-color);
    padding: 11px 20px;
    display: flex;
    gap: 25px;
  }
  
  .overlay-{{ section.id }} {
    background-color: rgba(0, 0, 0, var(--overlay-opacity));
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block !important;
  }
  
  .text-content-{{ section.id }} {
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--text-color);
    text-align: center;
    width: 87%;
    line-height: 1.4;
  }
  
  .banner-desktop-only {
    display: none;
  }
  
  .button-wrapper-{{ section.id }} {
    margin-top: {{ button_mt | times: 0.75 | round: 0 }}px;
    display: flex;
    justify-content: center;
    gap: 27px;
  }
  
  .tab-wrapper-{{ section.id }} {
    font-size: 12px;
    display: flex;
    justify-content: center;
    gap: 20px;
    position: absolute;
    bottom: 5%;
    width: 100%;
    z-index: 1;
  }
  
  .tab-button-{{ section.id }} {
    cursor: pointer;
    position: relative;
    padding-bottom: 15px;
    min-width: 50px;
    text-align: center;
  }
  
  .tab-button-bottom-{{ section.id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background-color: var(--swiper-pagination-bg-color);
    display: block !important;
  }
  
  .tab-button-bottom-overlay-{{ section.id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0%;
    height: 3px;
    background-color: var(--swiper-pagination-bg-color-active-overlay);
    display: block !important;
  }
  
  .swiper-slide-image-{{ section.id }},
  .swiper-slide-image-{{ section.id }} svg {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  .heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
  }

  .heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .text-{{ section.id }} {
    margin-top: {{ text_mt | times: 0.75 | round: 0 }}px;
    text-align: {{ text_align_mobile }};
  }

  .text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .first-btn-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: fit-content;
    margin: 0;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    border: {{ button_border_thickness }}px solid {{ button_border_color }};
    background-color: {{ button_bg_color }};
    transition: all 0.25s ease 0s;
    position: relative;
    font-weight: 700;
    z-index: 2;
  }

  .first-btn-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    border: {{ button_border_thickness }}px solid {{ button_border_hover_color }};
    background-color: {{ button_bg_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .second-btn-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: fit-content;
    margin: 0;
    font-size: {{ second_button_size_mobile }}px;
    color: {{ second_button_color }};
    line-height: {{ second_button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ second_button_padding_vertical_mobile }}px {{ second_button_padding_horizontal_mobile }}px;
    border-radius: {{ second_button_radius }}px;
    border: {{ second_button_border_thickness }}px solid {{ second_button_border_color }};
    background-color: {{ second_button_bg_color }};
    transition: all 0.25s ease 0s;
    position: relative;
    font-weight: 700;
    z-index: 2;
  }

  .second-btn-{{ section.id }}:hover {
    color: {{ second_button_hover_color }};
    border: {{ second_button_border_thickness }}px solid {{ second_button_border_hover_color }};
    background-color: {{ second_button_bg_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .tab-button-{{ section.id }} {
    margin: 0;
    font-size: {{ tab_text_size_mobile }}px;
    color: {{ tab_text_color }};
    line-height: {{ tab_text_height }}%;
    text-transform: unset;
  }

  @media(min-width: 750px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }
    
    .swiper-{{ section.id }} {
      height: var(--desktop-height);
    }
    
    .banner-mobile-only {
      display: none;
    }
    
    .banner-desktop-only {
      display: block;
    }
    
    .tab-wrapper-{{ section.id }} {
      font-size: 14px;
      min-width: 110px;
    }
    
    .text-content-{{ section.id }} {
      top: 50%;
    }
    
    .heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }
  
    .heading-{{ section.id }} * {
      margin: 0;
      font-size: {{ heading_size }}px;
    }

    .text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      text-align: {{ text_align }};
    }
  
    .text-{{ section.id }} * {
      margin: 0;
      font-size: {{ text_size }}px;
    }

    .button-wrapper-{{ section.id }} {
      margin-top: {{ button_mt }}px;
    }

    .first-btn-{{ section.id }} {
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }

    .second-btn-{{ section.id }} {
      padding: {{ second_button_padding_vertical }}px {{ second_button_padding_horizontal }}px;
      font-size: {{ second_button_size }}px;
    }

    .tab-button-{{ section.id }} {
      font-size: {{ tab_text_size }}px;
    }

  }

  @media screen and (max-width: 749.5px) {
    div.swiper-button-next-{{ section.id }},
    div.swiper-button-prev-{{ section.id }} {
      bottom: 36px;
      top: unset;
    }
  }
  
{%- endstyle -%}

