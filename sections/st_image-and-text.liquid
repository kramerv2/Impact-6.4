  src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/verifier.js?v=1717092340"
  data-section-id="{{ section.id }}"
></script>

<div class="st_not-found"></div>

<style>
  {%- assign subtitle_font = section.settings.subtitle_font -%}
  {%- assign title_font = section.settings.title_font -%}
  {%- assign text_font = section.settings.text_font -%}
  {%- assign benefits_font = section.settings.benefits_font -%}
  {%- assign benefits_font_bolder = section.settings.benefits_font | font_modify: 'weight', '+200' -%}
  {{ subtitle_font | font_face }}
  {{ title_font | font_face }}
  {{ text_font | font_face }}
  {{ benefits_font | font_face }}
  {{ benefits_font_bolder | font_face }}

  .st_img-text-wrapper--{{ section.id }} {
    margin: 0px auto;
    max-width: {{  section.settings.maximal_width }}rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 200px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    padding-inline: 50px;
    flex-direction: {% if section.settings.bild_position == 'rechts' %}row{% else %}row-reverse{% endif %};
    height: fit-content;
  }

  .st_img-text-text--{{ section.id }} {
    width: {{ 100 | minus: section.settings.image_width }}%;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .st_img-text-text--{{ section.id }} p {
    font-family: {{ text_font.family }}, {{ text_font.fallback_families }};
    font-size: {{ section.settings.text_fontsize }}px;
    font-weight: {{ text_font.weight }};
  }

  .st_img-text-text-title--{{ section.id }} h2 {
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    font-size: {{ section.settings.title_fontsize }}px;
    font-family: {{ title_font.family }}, {{ title_font.fallback_families }};
    font-weight: {{ title_font.weight }};
    color: {{ section.settings.titel_color }};
  }

  .st_img-text-text-title--{{ section.id }} h3 {
    font-family: 'Poppins', sans-serif;
    font-weight: 300;
    font-size: {{ section.settings.subtitle_fontsize }}px;
    font-family: {{ subtitle_font.family }}, {{ subtitle_font.fallback_families }};
    font-weight: {{ subtitle_font.weight }};
    color: {{ section.settings.subtitel_color }};
  }

  .st_img-text-image--{{ section.id }} {
    width: 50%;
    position: relative;
    max-height: 550px;
    display: flex
  }

  .st_img-text-image--{{ section.id }} img:first-child {
    object-fit: cover;
    object-position: center;
  }

  .st_img-text-image-floating--{{ section.id }} {
    position: absolute;
    {% if section.settings.bild_position == 'rechts' %}
    left: -70px;
    {% else %}
    right: -70px;
    {% endif %}
    bottom: 10%;
    width: 140px;
    height: 140px;
    border-radius: 50%;
    border: {{section.settings.border_thickness}}px solid {{ section.settings.border_color }};
    object-fit: cover;
  }

  .st_img-text-image-usp-box--{{ section.id }} {
    padding: 20px;
    border-width: {{ section.settings.box_border_width }}px;
  border-color: {{ section.settings.box_border_color }};
    border-style: dotted;
    background: {{ section.settings.box_hintergrund }};
  }
  .st_img-text-image-usp-wrapper--{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .st_img-text-image-usp-item--{{ section.id }} {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .st_img-text-image-usp-item-image--{{ section.id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 20px;
    height: 20px;
    min-width: 20px;
    min-height: 20px;
    max-width: 20px;
    max-height: 20px;
  }

  .st_img-text-image-usp-item-text--{{ section.id }} p{
    color: {{ section.settings.box_text }};
    font-family: {{ benefits_font.family }}, {{ benefits_font.fallback_families }} !important;
    font-size: {{ section.settings.benefits_fontsize }}px;
    font-weight: {{ benefits_font.weight }};
  }

  .st_img-text-image-usp-item-text--{{ section.id }} b{
    font-weight: {{ benefits_font_bolder.weight }} !important;
  }

  @media only screen and (max-width: 1024px) {
    .st_img-text-image--{{ section.id }} {
      width: 100%;
      max-height: {{section.settings.image_max_height_mobile}}px;
    }
    .st_img-text-text--{{ section.id }} {
      width: 100%;
    }
    .st_img-text-wrapper--{{ section.id }} {
      flex-direction: column-reverse;
      gap: {%  if section.settings.show_zoomed_image %} 60px {% else %} 15px {% endif %};
      padding-inline: 0px;
    }
    .st_img-text-text--{{ section.id }} {
      padding: 0 20px;
    }
    .st_img-text-image-floating--{{ section.id }} {
      left: 5%;
      bottom: -40px;
      width: 120px;
      height: 120px;
    }
    .st_img-text-text-title--{{ section.id }} h2 {
      font-size: {{ section.settings.title_fontsize | minus: 5 }}px;
    }
    .st_img-text-text-title--{{ section.id }} h3 {
      font-size: {{ section.settings.sub_titel | minus: 2 }}px;
    }
    .st_img-text-text--{{ section.id }} p {
      font-size: {{ section.settings.text_fontsize | minus: 1 }}px;
    }
    .st_img-text-image-usp-item-text--{{ section.id }} p{
      font-size: {{ section.settings.benefits_fontsize | minus: 1 }}px;
    }
  }
</style>

<div class="st_wrapper st_check-section--{{ section.id }}">
  <div class="st_img-text-wrapper--{{ section.id }}">
    <div class="st_img-text-text--{{ section.id }}">
      <div class="st_img-text-text-title--{{ section.id }}">
        <h3>{{ section.settings.titel }}</h3>
        <h2>{{ section.settings.sub_titel }}</h2>
      </div>
      {{ section.settings.text }}
      {% if section.blocks.size > 0 %}
        <div class="st_img-text-image-usp-box--{{ section.id }}">
          <div class="st_img-text-image-usp-wrapper--{{ section.id }}">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'vorteil' -%}
                  <div class="st_img-text-image-usp-item--{{ section.id }}">
                    <div class="st_img-text-image-usp-item-image--{{ section.id }}">
                      {% if block.settings.icon %}
                        <img src="{{ block.settings.icon | image_url: width: "20" }}">
                      {% else %}
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="100pt"
                          height="100pt"
                          viewBox="0 0 100 100"
                          version="1.1"
                        >
                          <g id="#000000fe">
