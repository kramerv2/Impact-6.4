{%- liquid 
  assign padding_horizontal = section.settings.padding_horizontal
  assign padding_horizontal_mobile = section.settings.padding_horizontal_mobile
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign border_color = section.settings.border_color
  assign border_thickness = section.settings.border_thickness
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign margin_horizontal_mobile = section.settings.margin_horizontal_mobile
  assign margin_horizontal = section.settings.margin_horizontal
  assign background_color = section.settings.background_color
  assign background_gradient = section.settings.background_gradient
  assign full_width = section.settings.full_width
  assign content_width = section.settings.content_width
  assign lazy = section.settings.lazy
  assign section_radius = section.settings.section_radius

  assign layout = section.settings.layout
  assign layout_mobile = section.settings.layout_mobile
  assign layout_gap = section.settings.layout_gap
  assign layout_gap_mobile = section.settings.layout_gap_mobile

  assign block_radius = section.settings.block_radius
  assign block_border_thickness = section.settings.block_border_thickness
  assign block_bg_color = section.settings.block_bg_color
  assign block_border_color = section.settings.block_border_color

  assign content_body_padding_horizontal = section.settings.content_body_padding_horizontal
  assign content_body_padding_horizontal_mobile = section.settings.content_body_padding_horizontal_mobile
  assign content_body_padding_vertical = section.settings.content_body_padding_vertical
  assign content_body_padding_vertical_mobile = section.settings.content_body_padding_vertical_mobile

  assign media_per_row = section.settings.media_per_row
  assign media_per_row_mobile = section.settings.media_per_row_mobile
  assign media_gap = section.settings.media_gap
  assign media_gap_mobile = section.settings.media_gap_mobile

  assign arrow_size = section.settings.arrow_size
  assign arrow_icon_size = section.settings.arrow_icon_size
  assign arrow_color = section.settings.arrow_color
  assign arrow_bg_color = section.settings.arrow_bg_color
  assign arrow_radius = section.settings.arrow_radius
  assign arrow_border_thickness = section.settings.arrow_border_thickness
  assign arrow_border_color = section.settings.arrow_border_color
  assign arrow_show_desktop = section.settings.arrow_show_desktop
-%}

{%- style -%}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .feature-body-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ layout_gap_mobile }}px;
  }

  .feature-right-{{ section.id }} {
    position: relative;
  }

  .feature-right-inner-{{ section.id }} {
    overflow-y: visible;
    scrollbar-width: none;
    padding: {{ content_body_padding_vertical_mobile }}px {{ content_body_padding_horizontal_mobile }}px;
  }

  .feature-right-inner-{{ section.id }}::-webkit-scrollbar {
    display: none;
  }

  .feature-block-{{ section.id }} {
    background-color: {{ block_bg_color }};
    border-radius: {{ block_radius }}px;
    border: {{ block_border_thickness }}px solid {{ block_border_color }};
    overflow: hidden;
  }

  .feature-media-wrapper-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat({{ media_per_row_mobile }}, 1fr);
    gap: {{ media_gap_mobile }}px;
  }

  .feature-right-{{ section.id }}.scroll .feature-arrow-{{ section.id }} {
    display: flex;
  }

  .feature-arrow-{{ section.id }} {
    display: none;
    position: absolute;
    right: 15px;
    bottom: 15px;
    width: {{ arrow_size }}px;
    height: {{ arrow_size }}px;
    border: 0px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: {{ arrow_radius }}px;
    background: transparent;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    -webkit-appearance: none;    
    transform: rotate(90deg);
    -webkit-animation: pulse{{ section.id | replace: '-', '' }} 1.5s ease-in-out infinite;
    animation: pulse{{ section.id | replace: '-', '' }} 1.5s ease-in-out infinite;
  }
  
  @keyframes pulse{{ section.id | replace: '-', '' }} {
    0% {
      transform: rotate(90deg) translate(0px);
    }
    100% {
      transform: rotate(90deg) translate(5px);
    }
  }

  .feature-arrow-{{ section.id }} .animate-icon {
    pointer-events: none;
    place-items: center;
    display: grid;
  }

  .feature-arrow-{{ section.id }} .animate-icon:before {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size }}px;
    height: {{ arrow_icon_size }}px;
    transform: rotate(calc(1 * 45deg));
    box-sizing: border-box;
    border-style: solid;
    border: 0px;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    position: relative;
    left: -1px;
  }

  .collection-btn-prev-{{ section.id }} .animate-icon:before {
    left: unset;
    right: -1px;
    border-right: 0px;
    border-top: 0px;
    border-bottom: 2px solid currentColor;
    border-left: 2px solid currentColor;
  }

  .feature-arrow-{{ section.id }} .animate-icon:after {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size | minus: 0.3 }}px;
    height: 1.6px;
    transform-origin: center;
    opacity: 0;
    background: currentColor;
    transform: scaleX(.5);
  }

  .feature-arrow-{{ section.id }} span {
    color: {{ arrow_color }};
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .feature-body-{{ section.id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ layout_gap }}px;
    }

    .feature-right-inner-{{ section.id }} {
      overflow-y: scroll;
      padding: {{ content_body_padding_vertical }}px {{ content_body_padding_horizontal }}px;
    }

    .feature-media-wrapper-{{ section.id }} {
      grid-template-columns: repeat({{ media_per_row }}, 1fr);
      gap: {{ media_gap }}px;
    }

    .feature-arrow-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
      transition: all 0.25s ease 0s;
    }

    .feature-arrow-{{ section.id }} .animate-icon:before {
      width: {{ arrow_icon_size }}px;
      height: {{ arrow_icon_size }}px;
    }

    .feature-arrow-{{ section.id }} .animate-icon:after {
      width: {{ arrow_icon_size | minus: 0.3 }}px;
    }

  }
  
{%- endstyle -%}

{% unless full_width %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ content_width }}px;
    }
  </style>
{% endunless %}

{% if margin_horizontal_mobile > 0 %}
  <style>
    .section-{{ section.id }} {
      border-left: solid {{ border_color }} {{ border_thickness }}px;
      border-right: solid {{ border_color }} {{ border_thickness }}px;
    }
    
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: 0px;
        border-right: 0px;
      }
    }
  </style>
{% endif %}

{% if margin_horizontal > 0 %}
  <style>
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: solid {{ border_color }} {{ border_thickness }}px;
        border-right: solid {{ border_color }} {{ border_thickness }}px;
      }
    }
  </style>
{% endif %}

{% if layout_mobile == 'image_content'%}
  <style>
    .feature-left-{{ section.id }} {
      order: 1;
    }
    .feature-right-{{ section.id }} {
      order: 2;
    }
  </style>
{% elsif layout_mobile == 'content_image' %}
  <style>
    .feature-left-{{ section.id }} {
      order: 2;
    }
    .feature-right-{{ section.id }} {
      order: 1;
    }
  </style>
{% endif %}

{% if layout == 'image_content'%}
  <style>
    @media(min-width: 1024px) {
      .feature-left-{{ section.id }} {
        order: 1;
      }
      .feature-right-{{ section.id }} {
        order: 2;
      }
    }    
  </style>
{% elsif layout == 'content_image' %}
  <style>
    @media(min-width: 1024px) {
      .feature-left-{{ section.id }} {
        order: 2;
      }
      .feature-right-{{ section.id }} {
        order: 1;
      }
    }   
  </style>
{% endif %}

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'image' %}
      <style>
        {{  block.settings.heading_font | font_face: font_display: 'swap' }}
        {{  block.settings.sub_heading_font | font_face: font_display: 'swap' }}       

        .feature-left-{{ section.id }} {
          padding: {{ block.settings.image_padding_vertical_mobile }}px {{ block.settings.image_padding_horizontal_mobile }}px;
        }

        .feature-image-{{ block.id }} {    
          position: relative;
          z-index: 0;      
          width: 100%;
          height: 100%;
          border-radius: {{ block.settings.image_radius }}px;
          overflow: hidden;
        }

        .feature-image-{{ block.id }}:after {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-color: {{ block.settings.image_overlay_color | hex_to_rgba: block.settings.image_overlay }}
        }
        

        .feature-image-{{ block.id }} img,
        .feature-image-{{ block.id }} svg {
          display: block;     
          width: 100%;
          height: 100%;
          object-fit: cover;
        }

        .feature-image-{{ block.id }} svg {
          background-color: #AFAFAF;
        }

        .feature-image-heading-{{ block.id }},
        .feature-image-subheading-{{ block.id }} {
          text-align: {{ block.settings.content_align_mobile }};
          position: absolute;          
          left: 15px;      
          z-index: 2;
          text-align: {{ block.settings.content_align_mobile }};
          width: calc(100% - 30px);
        }

        .feature-image-heading-{{ block.id }} {
          bottom: 15px;   
        }

        .feature-image-subheading-{{ block.id }} {
          top: 15px;
        }

        .feature-image-heading-{{ block.id }} * {          
          margin: 0;     
          font-size: {{ block.settings.heading_size_mobile }}px;
          color: {{ block.settings.heading_color }};
          line-height: {{ block.settings.heading_height }}%;
          text-transform: unset;
          text-decoration: none;
          word-break: break-word;
          font-weight: 700;
        }  

        .feature-image-subheading-{{ block.id }} * {          
          margin: 0;     
          font-size: {{ block.settings.sub_heading_size_mobile }}px;
          color: {{ block.settings.sub_heading_color }};
          line-height: {{ block.settings.sub_heading_height }}%;
          text-transform: unset;
          text-decoration: none;
          word-break: break-word;
          font-weight: 700;
        }  

        @media(min-width: 1024px) {          
          .feature-left-{{ section.id }} {
            padding: {{ block.settings.image_padding_vertical }}px {{ block.settings.image_padding_horizontal }}px;
          }

          .feature-image-heading-{{ block.id }},
          .feature-image-subheading-{{ block.id }} {
            text-align: {{ block.settings.content_align }};
          }

          .feature-image-heading-{{ block.id }} * {
            font-size: {{ block.settings.heading_size }}px;
          }  

          .feature-image-subheading-{{ block.id }} * {
            font-size: {{ block.settings.sub_heading_size }}px;
          }  
        }
      </style>

      {% if block.settings.heading_custom %}
        <style>
          .feature-image-heading-{{ block.id }} * {
            font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
            font-weight: {{ block.settings.heading_font.weight }};
            font-style: {{ block.settings.heading_font.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.sub_heading_custom %}
        <style>
          .feature-image-subheading-{{ block.id }} * {
            font-family: {{ block.settings.sub_heading_font.family }}, {{ block.settings.sub_heading_font.fallback_families }};
            font-weight: {{ block.settings.sub_heading_font.weight }};
            font-style: {{ block.settings.sub_heading_font.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.image_ratio_mobile == "portrait" %}
        <style>
          .feature-image-{{ block.id }},
          .feature-right-inner-{{ section.id }}  {
            aspect-ratio: 9.6/13;
          }
        </style>
      {% elsif block.settings.image_ratio_mobile == "landscape" %}
        <style>
          .feature-image-{{ block.id }},
          .feature-right-inner-{{ section.id }}  {
            aspect-ratio: 12/8;
          }
        </style>
      {% elsif block.settings.image_ratio_mobile == "square" %}
        <style>
          .feature-image-{{ block.id }},
          .feature-right-inner-{{ section.id }} {
            aspect-ratio: 12/12;
          }
        </style>
      {% else %}
        <style>
          .feature-image-{{ block.id }},
          .feature-right-inner-{{ section.id }} {
            aspect-ratio: auto;
          }
        </style>
      {% endif %}
      
      {% if block.settings.image_ratio == "portrait" %}
        <style>
          @media(min-width: 1024px) {
            .feature-image-{{ block.id }},
            .feature-right-inner-{{ section.id }} {
              aspect-ratio: 9.6/13;
            }
          }
          
        </style>
      {% elsif block.settings.image_ratio == "landscape" %}
        <style>
          @media(min-width: 1024px) {
            .feature-image-{{ block.id }},
            .feature-right-inner-{{ section.id }} {
              aspect-ratio: 12/8;
            }
          }  
        </style>
      {% elsif block.settings.image_ratio == "square" %}
        <style>
          @media(min-width: 1024px) {
            .feature-image-{{ block.id }},
            .feature-right-inner-{{ section.id }} {
              aspect-ratio: 12/12;
            }
          }    
        </style>
      {% else %}
        <style>
           @media(min-width: 1024px) {
            .feature-image-{{ block.id }},
            .feature-right-inner-{{ section.id }} {
              aspect-ratio: auto;
            }
          }
        </style>
      {% endif %}
   
    {% when 'media' %}
      <style>
        .feature-media-{{ block.id }} {
          border: {{ block.settings.media_border_thickness }}px solid {{ block.settings.media_border_color }};
          border-radius: {{ block.settings.media_radius }}px;
          overflow: hidden;
        }

        .feature-media-{{ block.id }} img,
        .feature-media-{{ block.id }} svg,
        .feature-media-{{ block.id }} video,
        .feature-media-{{ block.id }} iframe  {
          display: block;
          width: 100%;
          height: 100%;
          object-fit: cover;
          margin: 0;
          border: 0;
          box-shadow: 0;
        }

        .feature-media-{{ block.id }} svg {
          background-color: #AFAFAF;
        }
      </style>
      {% if block.settings.media_ratio_mobile == "portrait" %}
        <style>
          .feature-media-{{ block.id }} {
            aspect-ratio: 9.6/13;
          }
        </style>
      {% elsif block.settings.media_ratio_mobile == "landscape" %}
        <style>
        .feature-media-{{ block.id }} {
          aspect-ratio: 12/8;
        }
        </style>
      {% elsif block.settings.media_ratio_mobile == "square" %}
        <style>
          .feature-media-{{ block.id }} {
            aspect-ratio: 12/12;
          }
        </style>
      {% else %}
        <style>
          .feature-media-{{ block.id }} {
            aspect-ratio: auto;
          }
        </style>
      {% endif %}
      
      {% if block.settings.media_ratio == "portrait" %}
        <style>
          @media(min-width: 1024px) {
            .feature-media-{{ block.id }} {
              aspect-ratio: 9.6/13;
            }
          }
          
        </style>
      {% elsif block.settings.media_ratio == "landscape" %}
        <style>
          @media(min-width: 1024px) {
            .feature-media-{{ block.id }} {
              aspect-ratio: 12/8;
            }
          }  
